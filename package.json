{
  "name": "next-use-theme",
  "version": "2.0.10",
  "description": "A NextJS wrapper component which provides a useTheme hook as well as dealing with theme changes and the dreaded Flash of incorrect theme",
  "license": "MIT",
  "repository": "https://github.com/AlfieJones/next-use-theme",
  "author": {
    "name": "Alfie Jones",
    "url": "https://ajones.uk"
  },
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.module.js",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "jest --env=jsdom",
    "build": "microbundle --jsxFragment React.Fragment --jsx React.createElement --jsxImportSource react --tsconfig ./configs/base.json --compress",
    "dev": "microbundle watch --jsxFragment React.Fragment --jsx React.createElement --jsxImportSource react  --tsconfig ./configs/base.json "
  },
  "peerDependencies": {
    "next": "*",
    "react": "*",
    "react-dom": "*"
  },
  "jest": {
    "resetMocks": false,
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/js-cookie": "^3.0.1",
    "@types/next": "^9.0.0",
    "@types/react": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-jest": "^27.4.6",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.4.7",
    "jest-localstorage-mock": "^2.4.18",
    "jsdom": "^19.0.0",
    "microbundle": "^0.14.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "js-cookie": "^3.0.1"
  }
}
